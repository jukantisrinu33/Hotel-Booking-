<%layout('/layouts/boilerplate') %>
<body>

<div id="filters">
  <div class="filter mt-3">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
  </div>

  <div class="filter mt-3">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </div>

  <div class="filter mt-3">
    <i class="fa-solid fa-mountain-city"></i> 
    <p>Iconic cities</p>
  </div>

  <div class="filter mt-3">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </div>

  <div class="filter mt-3">
    <i class="fa-brands fa-fort-awesome"></i> 
    <p>Castles</p>
  </div>

  <div class="filter mt-3">
    <i class="fa-solid fa-campground"></i>
    <p>Campaign</p>
  </div>

  <div class="filter mt-3">
    <i class="fa-solid fa-cow"></i>
    <p>Farms</p>
  </div>

  <div class="filter mt-3">
    <i class="fa-solid fa-snowflake"></i>
    <p>Arctic</p>
  </div>

  <div class="filter mt-3">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Amazing Pools</p>
  </div>

  <div class="form-check-reverse form-switch ms-auto">
    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Include Taxes</label>
  </div>

</div>

<div class="row row-cols-xxl-4 row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
  <% for(let i=0;i<alllistings.length;i++){  %>
    <a href="/listings/<%=alllistings[i]._id %>" id="card-link">
      <div class="card col">
        <img src="<%=alllistings[i].image.url %>" class="card-img-top" alt="Room image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><%=alllistings[i].title %></h5>
          <p class="card-text">&#x20b9; <%=alllistings[i].price.toLocaleString("en-IN")%>/night
           <i class="tax-info">&nbsp;&nbsp;+18% GST</i></p>
        </div>
      </div>
    </a>
<% } %>
</div>
</body>



<script>
  let TaxSwith=document.getElementById("flexSwitchCheckDefault");
  let taxinfo=document.getElementsByClassName("tax-info");
  TaxSwith.addEventListener("click",()=>
  {
    for(i=0;i<taxinfo.length;i++)
    {
      if(taxinfo[i].style.display!="inline")
      {
        taxinfo[i].style.display="inline";
      }
      else
      {
        taxinfo[i].style.display="none";
      }

    }
  });

</script>